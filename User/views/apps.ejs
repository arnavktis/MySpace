<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Apps</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <h1 class="text-3xl tracking-tighter mb-3">All Apps</h1>
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="py-2">App Name</th>
                    <th class="py-2">Profile Image</th>
                    <th class="py-2">Redirect URL</th>
                </tr>
            </thead>
            <tbody>
                <% apps.forEach(app => { %>
                    <tr>
                        <td class="py-2"><%= app.name %></td>
                        <td class="py-2">
                            <a href="<%= app.redirectURL %>" target="_blank">
                                <img src="<%= app.profileURL %>" alt="<%= app.name %> Profile Image" class="w-16 h-16 object-cover rounded">
                            </a>
                        </td>
                        <td class="py-2">
                            <a href="<%= app.redirectURL %>" target="_blank" class="text-blue-500 underline">Go to App</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="mt-4">
            <a href="/add-app" class="px-5 py-2 bg-blue-500 rounded-lg">Add New App</a>
        </div>
    </div>
</body>
</html>
