<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Spaces</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white p-10">

  <div class="w-full max-w-lg mx-auto bg-zinc-800 p-10 rounded-lg shadow-lg">
    <div class="text-xl text-blue-500 mb-10">
      <a href="/">Back to home</a>
    </div>

    <h1 class="text-3xl tracking-tighter mb-6 text-center">User Spaces</h1>

    <!-- List of existing spaces -->
    <div class="spaces-list mb-6">
      <h2 class="text-2xl tracking-tighter mb-3">Your Spaces</h2>
      <% if (spaces && spaces.length > 0) { %>
        <ul class="space-y-3">
          <% spaces.forEach(function(space) { %>
            <li class="p-4 bg-zinc-700 rounded-lg">
              <strong>Space Name:</strong> <%= space.name %>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p class="text-gray-400">No spaces created yet.</p>
      <% } %>
    </div>

    <!-- Form to create a new space -->
    <form action="/create-space/<%= userid %>" method="POST" class="space-y-4">
      <input 
        type="text" 
        name="Myspacename" 
        placeholder="Enter space name" 
        class="w-full p-3 rounded-lg border-none bg-zinc-700 text-white placeholder-gray-400" 
        required
      >
      <button 
        type="submit" 
        class="w-full bg-blue-500 hover:bg-blue-600 text-white py-3 rounded-lg"
      >
        Create New Space
      </button>
    </form>
  </div>

</body>
</html>
